{
  "name": "curatedotfun-plugins",
  "version": "0.0.1",
  "private": true,
  "packageManager": "bun@1.0.27",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "fmt": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
    "fmt:check": "prettier --check '**/*.{js,jsx,ts,tsx,json}'",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@types/node": "^20.11.0",
    "prettier": "^3.3.3",
    "turbo": "latest"
  }
}
